{erl_opts, [
    {parse_transform, lager_transform},
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars
]}.

{sub_dirs, ["apps/*", "rel", "deps"]}.

{deps, [
        {lager, "2.0.1",
            {git, "git://github.com/basho/lager.git", {tag, "2.0.1"}}},
        {amqp_client, ".*", {git, "git://github.com/jbrisbin/amqp_client.git", {tag, "rabbitmq-2.8.2"}}},
        {erlzmq, ".*", {git, "https://github.com/zeromq/erlzmq2.git", {branch, "master"}}},
        {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git", {branch, "master"}}},
        {folsom, ".*", {git, "git://github.com/boundary/folsom.git", {tag, "0.8.1"}}}
        ]}.

{deps_dir, "deps"}.
{lib_dirs, ["deps", "apps"]}.
